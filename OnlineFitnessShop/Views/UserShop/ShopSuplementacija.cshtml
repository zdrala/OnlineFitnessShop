@using ClassLibrarySeminarski.Model;
@using Microsoft.EntityFrameworkCore;
@{

    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@model OnlineFitnessShop.ViewModels.Kupac.SuplementacijaShopVM

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prikaz suplementacije</title>
    <link rel="stylesheet" href="~/css/User/ProizvodiShop.css">
    <script src="~/js/User/SuplementacijaShop.js"></script>
</head>
<body>

    <h2>Obuća</h2>
    <hr />

    <div class="container" id="cont1">
        <p class="pClass">
            Filter za kategoriju:
        </p>
        <label class="radio-inline">
            <input id="rd1" type="radio" name="optradio" onclick="filterProtein()">Protein
        </label>
        <label class="radio-inline">
            <input id="rd2" type="radio" name="optradio" onclick="filterKreatin()">Kreatin
        </label>
        <label class="radio-inline">
            <input id="rd3" type="radio" name="optradio" onclick="filterPre()">Pre-Workout
        </label>
        <label class="radio-inline">
            <input id="rd1" type="radio" name="optradio" onclick="filterSvi()" checked>Sve kategorije
        </label>

    </div>

    <div class="container2" id="cont2">
        <p class="pClass">Pretraga po nazivu:</p>
        <input type="text" id="myInput" onkeyup="search()" placeholder="Pretraga...">
    </div>

    <br class="clearBoth" style="clear:both" />

    <hr />
    <div class="table">
        <div id="pcL" class="p-container">
            @foreach (var x in @Model.podaci)
            {
            <a href="/UserShop/SuplementacijaPrikaz?SuplementacijaID=@x.SuplementacijaID">
                <div class="proizvod">
                    <img src="/images/@x.ImageUrl" />
                    <h5>@x.Naziv</h5>
                    <p>@x.Cijena KM</p>
                    <h1 style="display:none">@x.kategorijaSuplementacije</h1>

                </div>
            </a>    

            }


        </div>
    </div>
</body>
</html>
