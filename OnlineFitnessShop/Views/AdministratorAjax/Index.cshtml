@using ClassLibrarySeminarski.Model;
@using Microsoft.EntityFrameworkCore;
@{
    ViewData["Title"] = "Index";
}
@model OnlineFitnessShop.ViewModels.AdministratorVMs.NarudzbaStavkePrikazVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prikaz narudzbi na cekanju</title>
</head>
<body>
    <div class="tabela">
        <h3>Stavke narudžbe</h3>
        <table class="table table-hover table-bordered ">
            <thead class="thead-dark">
                <tr>
                    <th>Slika proizvoda</th>
                    <th>Naziv proizvoda</th>
                    <th>Veličina</th>
                    <th>Količina</th>
                


                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.stavkeList)
                {
                <tr>
                    <td>
                        <img src="/images/@x.imageUrl" width="50px" height="50px" />
                    </td>
                    <td>
                        @x.NazivProizvoda
                    </td>
                    <td>
                        @x.Velicina
                    <td>
                        @x.Kolicina
                    </td>


                </tr>
                }
            </tbody>
        </table>


    </div>
</body>
</html>

