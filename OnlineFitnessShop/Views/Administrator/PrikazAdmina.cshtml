@using ClassLibrarySeminarski.Model;
@using Microsoft.EntityFrameworkCore;
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model OnlineFitnessShop.ViewModels.AdministratorVMs.AdminPrikazVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prikaz admina</title>
</head>
<body>
<div class="tabela">
    <h3>Registrovani administratori</h3>
    <table class="table table-hover table-bordered ">
        <thead class="thead-dark">
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>E-mail adresa</th>
            <th>Korisničko ime</th>
            <th>Akcija</th>


        </tr>
        </thead>
        <tbody>
        @foreach (var x in Model.podaciAdmin)
        {
            <tr>
                <td>
                    @x.Ime
                </td>
                <td>
                    @x.Prezime
                </td>
                <td>
                @x.EmailAdresa
                <td>
                    @x.KorisnickoIme
                </td>
                <td>
                    <a href="/Administrator/UrediAdmina?AdminID=@x.KorisnikID" class="btn btn-info btn-sm "><span class="glyphicon glyphicon-pencil"></span>Uredi</a>
                    <a href="/Administrator/ObrisiAdmina?AdminID=@x.KorisnikID" class="btn btn-danger btn-sm "><span class="glyphicon glyphicon-remove-circle"></span>Obrisi</a>
                    <a href="/Administrator/UkloniUloguAdmina?AdminID=@x.KorisnikID" class="btn btn-warning btn-sm " style=" border: 1px solid black"><span class="glyphicon glyphicon-user"></span>Ukloni admina i dodijeli ulogu kupca</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="/Administrator/DodajAdmina" class="btn btn-success">Dodaj novog administratora</a><a href="/Administrator/Index" class="btn btn-secondary">Vrati se na početak</a>

</div>
</body>
</html>